{
  "dashboard": {
    "id": null,
    "title": "Benalsam System Monitoring",
    "tags": ["benalsam", "system", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Admin Backend Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"admin-backend\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [],
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Elasticsearch Service Status",
        "type": "stat",
        "targets": [
