            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 100000000},
                {"color": "red", "value": 200000000}
              ]
            },
            "mappings": []
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
