{
  "name": "benalsam-queue-service",
  "version": "1.0.0",
  "description": "Benalsam Queue Microservice - Bull Queue System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "build:prod": "tsc && npm run clean:dist",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "clean:dist": "rm -rf dist && mkdir dist",
    "docker:build": "docker build -t benalsam-queue-service .",
    "docker:run": "docker run -d --name queue-service -p 3004:3004 benalsam-queue-service",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down"
  },
  "keywords": [
    "queue",
    "bull",
    "microservice",
    "redis",
    "job-processing"
  ],
  "author": "Arda Tuna",
  "license": "MIT",
  "dependencies": {
    "@bull-board/api": "^6.12.7",
    "@bull-board/express": "^6.12.7",
    "@elastic/elasticsearch": "^8.15.0",
    "axios": "^1.6.0",
    "bull": "^4.12.0",
    "bull-board": "^1.7.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "redis": "^4.6.10",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
