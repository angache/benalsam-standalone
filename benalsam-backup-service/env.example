# Backup Service Environment Variables

# Server Configuration
PORT=3013
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3002,http://localhost:3003

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
MAX_BACKUPS=50
BACKUP_COMPRESSION=true

# Scheduling Configuration
SCHEDULING_ENABLED=true
DEFAULT_TIMEZONE=Europe/Istanbul

# Security
JWT_SECRET=your_jwt_secret
BCRYPT_ROUNDS=12

# Monitoring
ENABLE_MONITORING=true
METRICS_ENDPOINT=/api/v1/metrics

# File System
MAX_BACKUP_SIZE=1073741824
BACKUP_TIMEOUT=300000

# Database Backup
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_FORMAT=sql
DATABASE_BACKUP_COMPRESSION=true

# Edge Functions Backup
EDGE_FUNCTIONS_BACKUP_ENABLED=true
EDGE_FUNCTIONS_DIR=./supabase/edge-functions

# Migrations Backup
MIGRATIONS_BACKUP_ENABLED=true
MIGRATIONS_DIR=./supabase/migrations

# Seeds Backup
SEEDS_BACKUP_ENABLED=true
SEEDS_DIR=./supabase/seeds
