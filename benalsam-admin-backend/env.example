# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/benalsam_admin"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (VPS IP)
REDIS_HOST=209.227.228.96
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://209.227.228.96:6379
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_KEEP_ALIVE=30000
REDIS_RETRY_DELAY=50
REDIS_MAX_RETRIES=3

# Redis Cloud Configuration (Performance Analysis)
REDIS_CLOUD_HOST=redis-13243.c135.eu-central-1-1.ec2.redns.redis-cloud.com
REDIS_CLOUD_PORT=13243
REDIS_CLOUD_PASSWORD=YOUR_REDIS_CLOUD_PASSWORD
REDIS_CLOUD_URL=redis://default:YOUR_REDIS_CLOUD_PASSWORD@redis-13243.c135.eu-central-1-1.ec2.redns.redis-cloud.com:13243

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/avif

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@benalsam.com

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=benalsam-admin-uploads

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Supabase Configuration (for existing data)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Elasticsearch Configuration (VPS IP)
ELASTICSEARCH_URL=http://209.227.228.96:9200
ELASTICSEARCH_INDEX=benalsam_listings
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Search Configuration
SEARCH_CACHE_TTL=300
SEARCH_RATE_LIMIT=100
SEARCH_RATE_LIMIT_WINDOW_MS=900000

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Performance Monitoring Configuration
ENABLE_PERFORMANCE_MONITORING=false
PERFORMANCE_MONITORING_INTERVAL=900000

# Redis Cloud Configuration
ENABLE_REDIS_CLOUD=false

# Sentry Configuration (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

# CORS Configuration (Production)
CORS_ORIGIN=http://localhost:3003,http://localhost:5173,http://benalsam.com:3003,http://benalsam.com:5173

# Admin Default Configuration
ADMIN_DEFAULT_EMAIL=admin@benalsam.com
ADMIN_DEFAULT_PASSWORD=admin123456

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret 