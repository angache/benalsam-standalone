# Infrastructure Configuration
COMPOSE_PROJECT_NAME=benalsam-infrastructure

# Redis Configuration
REDIS_VERSION=7-alpine
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Elasticsearch Configuration
ELASTICSEARCH_VERSION=8.11.0
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_CLUSTER_PORT=9300
ELASTICSEARCH_PASSWORD=your-elasticsearch-password
ELASTICSEARCH_CLUSTER_NAME=benalsam-cluster
ELASTICSEARCH_NODE_NAME=benalsam-node

# Network Configuration
NETWORK_NAME=benalsam-network
NETWORK_DRIVER=bridge

# Volume Configuration
REDIS_DATA_PATH=./data/redis
ELASTICSEARCH_DATA_PATH=./data/elasticsearch

# Security Configuration
ELASTICSEARCH_XPACK_SECURITY_ENABLED=false
ELASTICSEARCH_DISCOVERY_TYPE=single-node

# Resource Limits
REDIS_MEMORY_LIMIT=512m
ELASTICSEARCH_MEMORY_LIMIT=1g
