# ============================================================================
# BENALSAM LISTING SERVICE CONFIGURATION
# ============================================================================

# Server Configuration
PORT=3008
NODE_ENV=development
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/benalsam
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Upload Service Configuration
UPLOAD_SERVICE_URL=http://localhost:3007/api/v1
UPLOAD_SERVICE_TIMEOUT=30000

# Admin Backend Configuration
ADMIN_BACKEND_URL=http://localhost:3002/api/v1
ADMIN_BACKEND_TIMEOUT=30000

# Elasticsearch Service Configuration
ELASTICSEARCH_SERVICE_URL=http://localhost:3006/api/v1
ELASTICSEARCH_SERVICE_TIMEOUT=30000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Job System Configuration
JOB_PROCESSING_ENABLED=true
JOB_MAX_RETRIES=3
JOB_RETRY_DELAY=5000
JOB_TIMEOUT=300000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/listing-service.log

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Security Configuration
JWT_SECRET=your-jwt-secret
API_KEY_SECRET=your-api-key-secret
ENCRYPTION_KEY=your-encryption-key

# Feature Flags
FEATURE_ASYNC_PROCESSING=true
FEATURE_IMAGE_OPTIMIZATION=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
