{
  "name": "@benalsam/realtime-service",
  "version": "1.0.0",
  "description": "Benalsam Realtime Service - Event-based queue system with Firebase Realtime Database",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=2048' nodemon",
    "build": "tsc -p tsconfig.json",
    "start": "NODE_OPTIONS='--max-old-space-size=2048' node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:security": "node test-security.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "deploy:function": "supabase functions deploy firebase-secure",
    "logs:function": "supabase functions logs firebase-secure"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "benalsam",
    "realtime",
    "firebase",
    "queue",
    "events"
  ],
  "author": "Benalsam Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "amqplib": "^0.10.9",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "firebase": "^12.3.0",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/firebase": "^2.4.32",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.6.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
