# Environment Configuration
NODE_ENV=development
PORT=3007
API_VERSION=v1

# Database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Firebase Realtime Database - GÜVENLİ AYARLAR
FIREBASE_DATABASE_URL=https://benalsam-2025-default-rtdb.europe-west1.firebasedatabase.app
FIREBASE_PROJECT_ID=benalsam-2025

# Service Account Credentials (GÜVENLİ)
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSjAgEAAoIBAQC...\n-----END PRIVATE KEY-----
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@benalsam-2025.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id

# Firebase Secret (Edge Function authentication) - GÜÇLÜ SECRET
FIREBASE_SECRET=your-super-secure-secret-key-here

# Firebase Auth Secret (Rules validation) - BASİT AUTH
FIREBASE_AUTH_SECRET=benalsam_super_secret_2025

# Redis
REDIS_URL=redis://localhost:6379
