# JWT
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3003,http://localhost:5173
