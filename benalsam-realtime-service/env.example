# ========================================
# ðŸ”’ MEMORY LEAK PREVENTION SETTINGS
# ========================================

# Queue Processing Limits
QUEUE_MAX_CONCURRENT_JOBS=10        # Max parallel job processing
QUEUE_BATCH_SIZE=50                 # Max jobs per batch
QUEUE_MAX_DEPTH_WARNING=1000        # Warn if queue exceeds this

# Job Cleanup Settings
QUEUE_CLEANUP_TTL_HOURS=24          # Delete completed jobs after 24h (was 7 days)
QUEUE_CLEANUP_INTERVAL_HOURS=6      # Run cleanup every 6h (was daily)
QUEUE_DLQ_ENABLED=true              # Enable Dead Letter Queue for failed jobs

# Memory Limits
NODE_OPTIONS=--max-old-space-size=2048  # 2GB heap limit (prevent OOM)
